<style>
    body {
        margin: 0;
        padding: 0;
        background: rgb(0,0,0);
        /* background-image:  linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)),url(mainbg.jpeg);
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover; */
    }
    a{
        text-decoration: none;
        color: white;
    }
    .navbar-nav {
        margin-left: auto;
    }
    .intro{
        width: 60%;
        margin: auto;
        margin-top: 40px;
    }
    .head{
        display: flex;
        justify-content: center;
    }
    .head h1{
        padding: 5px;
        border-radius: 4px;
        background-color: rgba(0,0,0,0.85);
        color: white;
    }
    .head:last-child{
        margin-top: 50px ;
    }
    .row{
        margin: 20px 0;
    }
    .container{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin: 4rem auto;
    }
    .card{
        min-width: 20rem;
        height: 300px;
        margin-bottom: 3rem;
        box-shadow: 0 2px 0 rgba(255, 255, 255, 0.05), 0 5px 20px rgba(255, 255, 255, 0.1);
        transition: transform .5s;
        border: solid 1px rgba(0,0,0,0.55);
        background: transparent; 
        background-image: url(mainbg.jpeg);
        background: white;
    }
    .card:hover{
        transform: scale(1.05);
    }
    .card-body{
        background: transparent;
        color: black;
        position: absolute;
        top: 0;left: 0;
        width: 100%;
        height: 100%;
        transition: 0.5s;
    }
    .card-body:hover{
        background-color: #39FF13;
        opacity: 0.9;
    }
    .card-body .layer{
        bottom: 0;
        opacity: 1;
        transition: 0.5s;
        position: absolute;
    }
    .card-body .layer p{
        opacity: 0;
    }
    .card-body:hover .layer p{
        opacity: 1;
    }
    .card-body:hover .layer{
        color: white;
        opacity: 1;
        bottom: 40%;
    }
    .boxx .intro{
        color: white;
    }
    .boxx .intro h1{
        font-size: 4rem;
    }
    .boxx .intro a{
        font-size: 2rem;
        padding: 7px;
        background-color: #39FF13;
        border-radius: 3px;
    }
    .boxx .intro a:hover{
        color: black;
        font-weight: 400;
    }
</style>
